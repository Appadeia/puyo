#       .'''''::::::::::;'''':                   ;''';;;'' :':''''''''`                ;++;;;;;;;;;;',++;;;;;;;'+'    
#      ;''';:::::::::::::::''''                 ''';;;;;;'` +;' ''''''',              ;++;;;;;;;;;;+:`+.+;;;;;;;'+'   
#     ''';:::::::::::::::::::'''.              ''';;;;;;;': ''`.';;;;;'';            ,++;;;;;;;;;;+; .+ '';;;;;;;'+:  
#    '''::::::::::::::::::::::;''.            ''';;;;;;;;': '+ ;';;;;;;'':           ++;;;;;;;;;;+;  :+  +;;;;;;;;++  
#   ;''::::::::::::::::::::::::;''           :'';;;;;;;;;'` '' ';;;;;;;;''`         '+;;;;;;;;;;':   ;+ `.+;;;;;;;;+; 
#  .''::::::::::::::::::::::::::;''          ''';;;;;;;;;'  '' ;';;;;;;;;''         ++;;;;;;;;'+'    '+;+'++;;;;;;;++ 
#  '';:::::::::::::::::::::::::::'',        ''`';;;;;;;;'` :'' ,';;;;;;;;'',       .+';;;;;''+'''.   '++'''++';;;;;++ 
# `';':::::::::::::::::::::::::::;''        '' +';;;;;'+`  ';'  ';;;;;;;;'''       ;++++++''''''''  `++'''''':'';;;++ 
# ;' '':::::::::::::::::::::::::::''`      ,''  +''''+:   '':+. `';;;;;;;'''`      '+, '''''''''''  ''+''''''` `'++'+ 
# '' `'':::;::::::::::::::::::;:::;':      '''   `..     '':;;'  .'';;;;'+'',      ++' +''''''''''  +;+'''''';     '+ 
# ''  '''::':::;;:::::::::::;''::::''      '''`        `'':;;;':   ''''''`;''      +++`+''''''''': '';''''''';    `+' 
# ''  ';'';'::''::::::::::;'':'::::''      ''''`     ,'';:;;;;;',   `,:.  ;''      '+'+'''''''''+ ;';;;+''''';    ++  
# ''  ';;''';'':::::::;'''''  '::::''      '';'+'''''';:;;;;;;;;':        +''      ;+;'+''''''''''';;;;;''''',   ++'  
# ''  ';;;;''''''''''';;;;;' .'::::''      '';:;:;;::;;;;;;;;;;;;''`     .'''      `+';;++'''''++';;;;;;'+'''  .+++`  
# ''  ';;;;;'  ```';;;;;;;;; :'::::''      ''':;;;;;;;;;;;;;;;;;;:;''''''''';       ++;;;;''''';;;;;;;;;;;'++''+'+;   
# ;'. ;;;;;''     ';;;;;;;;; '':::;';      ,'':;;;;;;;;;;;;;;;;;;;;:;;;;;;''.       '+;;;;;;;;;;;;;;;;;;;;;;;;;;++    
# `'; ,;;;;''`    ;;;;;;;;;. ';:::''.       '';;;;;;;;;;;;;;;;;;;;;;;;;;;:''        `+';;;;;;;;;;;;;;;;;;;;;;;;'+.    
#  ''; '''';';    .;;;;;;;' ;'::::''        ''':;;;;;;;;;;;;;;;;;;;;;;;;:'''         '+;;;;;;;;;;;;;;;;;;;;;;;;+'     
#  `''':;';::'`    ';;;;;;;`';:::'';         '';:;;;;;;;;;;;;;;;;;;;;;;;;''.          ++;;;;;;;;;;;;;;;;;;;;;;'+`     
#   ;'';;::::;'    `'';;';`'':::;''          ,'';;;;;;;;;;;;;;;;;;;;;;;:'''           ,++;;;;;;;;;;;;;;;;;;;;;'+      
