#                           ,;;;:,,;`          ;;;;            `;;:::::::::::::::::::::::::::;;                       
#                          `;;``;::;   .;;;,    ;;;;           ;;:::::::::::::::::::::::::::::;;                      
#                          ;:    ;;` .;;,`.,;;`  ;:;;          ;;:::::::::::::::::::::::::::::;;                      
#                         ;;     '; ::        ,; ,::;;        `;:::::::::::::::::::::::::::::::;`                     
#                        :; :;:. ;;.,           :.;,:;.       :;:::::::::::::::::::::::::::::::;:                     
#                        ;;;``.;;;;,             `;,,;;       ;;:::::::::::::::::::::::::::::::;;                     
#                       ;;,     `;;               ;,,:;       ;;:::::::::::::::::::::::::::::::;;                     
#                       ;;       ;:.              ;,,,;,      ;;:::::::::::::::::::::::::::::::;;                     
#                      :;        ;,;              ;,,,;;      ;;:::::::::::::::::::::::::::::::;;                     
#                      ;;        ;,;`            ,:,,,;;      ;;:::::::::::::::::::::::::::::::;;                     
#                      ;;       ,:,,;            ;,,,,;;      .;:::::::::::::::::::::::::::::::;:                     
#                      ;;       ;,,,,;`        `;:,,,,;,      `;;:::::;;;;;;::::::::::::::::::;;`                     
#                      ;;      .;,,,,,;;,     ;;,,,,,,;`       ;;:::;;;;;;;;;;;';;;:::;;;;;;;;;;;`                    
#                      ;;      ;,,,,,,,,:;;;;;:,,,,,,;;        ,;::;;;;;;;;;;    .;;;;;;;;;'    ;`                    
#                      ;;`    ;:,,,,,,,,,,,,,,,,,,,,,;;         ;;::;;;;;;;;;      ;;;;;;;;:   `;                     
#                      ;;;..:;:,,,,,,,,,,,,,,,,,,,,,;;`         ,;;::;;;;;;;,     ,;;;;;;;;.   ;,                     
#                      .;:;;:,,,,,,,,,,,,,,,,,,,,,,,;;           ;;:::;;;;;:     :;:;;;;;;;  `;;                      
#                       ;;,,,,,,,,,,,,,,,,,,,,,,,,,;;             ;;;:::;;;;;;;';;:::;;;;;;';;.                       
#                       .;;,,,,,,,,,,,,,,,,,,,,,,,;;`              ;;;:::::;;;:::::::::::;;;`                         
#                        :;;,,,,,,,,,,,,,,,,,,,,:;;`                ;;;:::::::::::::::::;;;`                          
#                         :;;,,,,,,,,,,,,,,,,,:;;;                   ,;;;:::::::::::::;;;;                            
#                          .;;;:,,,,,,,,,,,:;;;;.                      :;;;;;;:::;;;;;;;`                             
#                            :;;;;;;::;;;;;;;;`                          .;;;;;;;;;;;:                                
#                              `:;;;;;;;;;:`                                 `...`                                    
#
black="$(tput setaf 0)"
red="$(tput setaf 1)"
green="$(tput setaf 2)"
yellow="$(tput setaf 3)"
blue="$(tput setaf 4)"
magenta="$(tput setaf 5)"
cyan="$(tput setaf 6)"
white="$(tput setaf 7)"
nc="$(tput sgr0)"

function puyoexists {
	if pacman -Ss "^$1$" > /dev/null ; then
  	 echo ""
	else
 	 echo "${red}Package not found: ${green}$1${nc}"
	 exit
	fi
}
function puyocmds {
    echo "${red}You didn't ${green}specify a command."
    echo "${red}You can${green} do the following actions:"
    echo "    ${red}puyo ${green}in, install${red} packagename"
    echo "    ${red}puyo ${green}remove, rm${red} packagename"
    echo "    ${red}puyo ${green}dup, upgrade, up, update"
    echo "    ${red}puyo ${green}package, pkg"
}
function puyocheck {
    if [ -z "$2" ]
    then
        echo "${red}Error: no ${green}package name specified..${nc}"
        exit 1
    fi
}
function puyopkg {
 for pack in $@
 do
  puyoexists $pack
 done
}
function puyoinpkg {
        if test -f "$1" > /dev/null ; then
         echo "${red}Installing ${green}$1."
        else
         echo "${red}File not found: ${green}$1${nc}"
         exit
        fi
}
function puyoask {
 read -p "${red}Do you want to continue? ${green}[Y/n] " choice
 case "$choice" in 
    y|Y )
    ;;
    n|N )
	echo "${nc}"
    exit
    ;;
    * )
    ;;
 esac
}
echo -e "${red}loading up ${green}puyo package manager${nc}"
case "$1" in
    in|install)
        puyocheck "$@"
	puyopkg "${@:2}"
        echo "${red}Installing ${green}${@:2}..."
        puyoask
        sudo pacman -S --noconfirm "${@:2}" >/dev/null
        ;;
    remove|rm)
	puyopkg "$@"
        puyocheck "${@:2}"
        echo "${red}Removing ${green}${@:2}..."
	puyoask
        sudo pacman -Rns --noconfirm "${@:2}" >/dev/null
        ;;
    dup|upgrade|up|update)
        echo "${red}Updating your system. ${green}This can take a while."
        puyoask
        sudo pacman -Syu --noconfirm >/dev/null
        ;;
    package|pkg)
	puyoinpkg "${@:2}"
        puyoask
	sudo pacman -U "${@:2}" --noconfirm >/dev/null
        ;;
    *) puyocmds;;
esac
case "$1" in
    in|install) echo "${green}${@:2}${red} has been installed.";;
    remove|rm) echo "${green}${@:2}${red} has been removed.";;
    dup) echo "${red}Your system has been updated.";;
    *) ;;
esac
echo "${nc}"
