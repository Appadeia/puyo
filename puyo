#     ''';:::::;'';:..:;'';:::;'',             ''';:;;;;;;;;;;;;;;;;::''',              '++;;;;;;;;;;;;;;;;;;;+;      
#      '''':::::::;'''';;:::;'''.               '''';;;;;;;;;;;;;;:;;''',                ;++;;;;;;;;;;;;;;;;;;';      
#       ,'''';:::::::::::;'''';                  :'''';;;;;;;;;;;;;''''`                  ,++';;;;;;;;;;;;;;;;'+      
#         ;'''''';;;;''''''''`                     ''''+'';;;;''''''';                      '++';;;;;;;;;;;;;;'+'     
#           ,;'''''''''''':                          ;''''''''''''':                         `'+++';;;;;;;;;;;;'++;`  
#               `:;;:,`                                `,'''''';.                              `'+++++''';;;;'''+++++.
#                                                                                                 `:'+++++++++++++;.  
#                                                                                                       ```````       
#                                  ;.                                     .:;;;;;;;,                                  
#                                 .;;,                                 `;;;;';;;;;;;;;,                               
#                                 ;;;;:                               ;;;;::::::::::;;;;,                             
#                                `;:,;;;                            ,;;;:::::::::::::::;;;                            
#                                ;;,,,:;;`                         :;;::::::::::::::::::;;;`                          
